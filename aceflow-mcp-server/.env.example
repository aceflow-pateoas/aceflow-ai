# AceFlow MCP Unified Server Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Server operation mode
# Options: basic, standard, enhanced, auto
ACEFLOW_MODE=enhanced

# Logging configuration
ACEFLOW_LOG_LEVEL=INFO
ACEFLOW_LOG_FILE=/app/logs/aceflow.log

# Server configuration
ACEFLOW_HOST=localhost
ACEFLOW_PORT=8080

# =============================================================================
# FEATURE TOGGLES
# =============================================================================

# Core features (always enabled)
ACEFLOW_CORE_ENABLED=true

# Collaboration features
ACEFLOW_COLLABORATION_ENABLED=true
ACEFLOW_CONFIRMATION_TIMEOUT=30
ACEFLOW_AUTO_CONFIRM=false
ACEFLOW_INTERACTION_LEVEL=standard

# Intelligence features
ACEFLOW_INTELLIGENCE_ENABLED=true
ACEFLOW_INTENT_RECOGNITION=true
ACEFLOW_ADAPTIVE_GUIDANCE=true
ACEFLOW_LEARNING_ENABLED=false

# Monitoring features
ACEFLOW_MONITORING_ENABLED=true
ACEFLOW_USAGE_TRACKING=true
ACEFLOW_PERFORMANCE_TRACKING=true
ACEFLOW_DATA_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Caching
ACEFLOW_CACHE_ENABLED=true
ACEFLOW_CACHE_TTL=300
ACEFLOW_MAX_CACHE_SIZE=100MB

# Concurrency
ACEFLOW_MAX_CONCURRENT_REQUESTS=100
ACEFLOW_REQUEST_TIMEOUT=30
ACEFLOW_CONNECTION_TIMEOUT=60

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug mode (development only)
ACEFLOW_DEBUG=false
ACEFLOW_PROFILE=false
ACEFLOW_MEMORY_DEBUG=false

# Testing
ACEFLOW_TEST_MODE=false
ACEFLOW_MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API Security
ACEFLOW_API_KEY=your-secret-api-key-here
ACEFLOW_SSL_VERIFY=true
ACEFLOW_CORS_ENABLED=false
ACEFLOW_CORS_ORIGINS=*

# Data Security
ACEFLOW_ENCRYPT_DATA=false
ACEFLOW_ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# External services
ACEFLOW_EXTERNAL_API_URL=https://api.example.com
ACEFLOW_EXTERNAL_API_KEY=your-external-api-key

# Database (if using external storage)
ACEFLOW_DATABASE_URL=sqlite:///app/data/aceflow.db
ACEFLOW_DATABASE_POOL_SIZE=10

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Metrics
ACEFLOW_METRICS_ENABLED=true
ACEFLOW_METRICS_PORT=9090
ACEFLOW_METRICS_PATH=/metrics

# Health checks
ACEFLOW_HEALTH_CHECK_ENABLED=true
ACEFLOW_HEALTH_CHECK_INTERVAL=30

# Alerting
ACEFLOW_ALERT_EMAIL=admin@example.com
ACEFLOW_ALERT_WEBHOOK=https://hooks.slack.com/your-webhook

# =============================================================================
# DOCKER SPECIFIC
# =============================================================================

# Container configuration
ACEFLOW_CONTAINER_NAME=aceflow-mcp-server
ACEFLOW_RESTART_POLICY=unless-stopped

# Volume mounts
ACEFLOW_CONFIG_DIR=/app/config
ACEFLOW_DATA_DIR=/app/data
ACEFLOW_LOG_DIR=/app/logs

# =============================================================================
# KUBERNETES SPECIFIC
# =============================================================================

# Kubernetes deployment
ACEFLOW_NAMESPACE=aceflow
ACEFLOW_SERVICE_ACCOUNT=aceflow-sa
ACEFLOW_REPLICAS=3

# Resource limits
ACEFLOW_CPU_REQUEST=100m
ACEFLOW_CPU_LIMIT=500m
ACEFLOW_MEMORY_REQUEST=128Mi
ACEFLOW_MEMORY_LIMIT=512Mi

# =============================================================================
# CLOUD PROVIDER SPECIFIC
# =============================================================================

# AWS
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Azure
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=aceflow-rg

# Google Cloud
GOOGLE_CLOUD_PROJECT=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=/app/config/gcp-credentials.json